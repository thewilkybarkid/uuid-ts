{
  "name": "uuid-ts",
  "description": "A UUID library for use with fp-ts.",
  "version": "0.1.0",
  "license": "MIT",
  "homepage": "https://github.com/thewilkybarkid/uuid-ts",
  "repository": "github:thewilkybarkid/uuid-ts",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "dependencies": {
    "uuid": "^8.3.2"
  },
  "peerDependencies": {
    "fp-ts": "^2.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@tsconfig/recommended": "^1.0.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^16.11.26",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "del-cli": "^4.0.1",
    "docs-ts": "^0.6.10",
    "dtslint": "github:gcanti/dtslint#2c3c3487e7650d6ca90c2877dbbd7c4c08360d0d",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "fast-check": "^2.24.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "prettier-plugin-sh": "^0.10.0",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "scripts": {
    "prebuild": "del dist",
    "build": "tsc --project tsconfig.build.json",
    "docs": "docs-ts",
    "format": "prettier --ignore-unknown --check '**'",
    "format:fix": "npm run format -- --write",
    "lint": "eslint .",
    "prepare": "which husky && husky install || true",
    "release": "standard-version --sign",
    "test": "jest",
    "typecheck": "npm-run-all --aggregate-output --continue-on-error --parallel typecheck:*",
    "typecheck:dtslint": "dtslint test-d",
    "typecheck:tsc": "tsc --noEmit"
  }
}
